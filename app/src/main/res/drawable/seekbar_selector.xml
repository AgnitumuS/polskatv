                    <gradient android:angle="270" android:endColor="#e3e3e3" android:startColor="#d3d3d3" />
                </shape>
            </item>
            <item android:id="@android:id/progress">
                <clip>
                    <shape android:shape="rectangle">
                        <corners android:radius="5dp" />
                        <gradient android:angle="270" android:endColor="#33b5e5" android:startColor="#33b5e5" />
                    </shape>
                </clip>
            </item>
        </layer-list>
    </item>
</selector>

