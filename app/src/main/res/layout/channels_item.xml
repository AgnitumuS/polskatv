<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selector"
    android:paddingLeft="@dimen/horizontal_margin"
    android:paddingTop="@dimen/vertical_margin"
    android:paddingRight="@dimen/horizontal_margin"
    android:paddingBottom="@dimen/vertical_margin">

    <ImageView
        android:id="@+id/channels_item_icon"
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:paddingLeft="2dp" />

    <TextView
        android:id="@+id/channels_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/channels_item_icon"
        android:paddingLeft="2dp"
        android:textSize="@dimen/normal_header_1"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/channels_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/channels_item_name"
        android:layout_toRightOf="@id/channels_item_icon"
        android:paddingLeft="2dp"
        android:textSize="@dimen/normal_header_3" />

    <TextView
        android:id="@+id/channels_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/channels_item_time"
        android:layout_toRightOf="@id/channels_item_icon"
        android:paddingLeft="2dp"
        android:textSize="@dimen/normal_header_2" />

    <ProgressBar
        android:id="@+id/channels_item_progressbar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="wrap_content"
        android:layout_height="4dp"
        android:layout_below="@id/channels_item_title"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="4dp"
        android:layout_toRightOf="@id/channels_item_icon"
        android:max="100"
        android:paddingLeft="2dp"
        android:paddingRight="2dp" />

</RelativeLayout>